{
  "name": "tilepad-desktop",
  "version": "0.1.2",
  "description": "",
  "type": "module",
  "workspaces": [
    "display",
    "inspector"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "npm run prebuild && vite build",
    "prebuild": "npm run build:inspector && npm run build:display",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "build:inspector": "npm run build --workspace inspector",
    "build:display": "npm run build --workspace display",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "tauri": "tauri",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "lint:fix": "eslint src --fix",
    "make:licenses": "node scripts/generate-licenses.mjs",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test:unit": "vitest"
  },
  "license": "MIT",
  "dependencies": {
    "@castlenine/svelte-qrcode": "2.3.0",
    "@fontsource/roboto": "^5.2.8",
    "@tanstack/svelte-query": "6.0.1",
    "@tanstack/svelte-query-devtools": "6.0.0",
    "@tauri-apps/api": "2.8.0",
    "@tauri-apps/plugin-autostart": "2.5.0",
    "@tauri-apps/plugin-deep-link": "2.4.3",
    "@tauri-apps/plugin-opener": "2.5.0",
    "@tauri-apps/plugin-updater": "2.9.0",
    "bits-ui": "2.11.5",
    "intl-messageformat": "^10.7.18",
    "isomorphic-dompurify": "2.29.0",
    "marked": "16.4.0",
    "runed": "0.35.0",
    "semver-ts": "1.0.3",
    "svelte-awesome-color-picker": "4.0.2",
    "svelte-sonner": "1.0.5"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "9.37.0",
    "@iconify-json/solar": "1.2.4",
    "@iconify-json/twemoji": "1.2.4",
    "@storybook/addon-svelte-csf": "^5.0.10",
    "@storybook/sveltekit": "^9.1.10",
    "@sveltejs/adapter-static": "3.0.10",
    "@sveltejs/kit": "2.46.5",
    "@sveltejs/vite-plugin-svelte": "6.2.1",
    "@tanstack/eslint-plugin-query": "5.91.0",
    "@tauri-apps/cli": "2.8.4",
    "eslint": "9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-perfectionist": "4.15.1",
    "eslint-plugin-storybook": "^9.1.10",
    "eslint-plugin-svelte": "3.12.4",
    "eslint-plugin-unused-imports": "4.2.0",
    "prettier": "3.6.2",
    "prettier-plugin-svelte": "3.4.0",
    "storybook": "^9.1.10",
    "svelte": "5.39.12",
    "svelte-check": "4.3.3",
    "typescript": "5.8.3",
    "typescript-eslint": "8.46.1",
    "unplugin-icons": "22.4.2",
    "vite": "7.1.9",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "@sveltejs/kit": {
      "cookie": "^0.7.0"
    }
  },
  "npm": {
    "overrides": {
      "cookie": "^0.7.0"
    }
  }
